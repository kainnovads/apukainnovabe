{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "strict": false,
    "types": ["@adonisjs/auth", "@types/node"],
    "paths": {
      "#helper/*": ["./app/helpers/*"],
      "#models/*": ["./app/models/*"],
      "#validators/*": ["./app/validators/*"],
      "#controllers/*": ["./app/controllers/*"],
      "#services/*": ["./app/services/*"],
      "#utils/*": ["./app/utils/*"],
      "#middlewares/*": ["./app/middlewares/*"],
      "#config/*": ["./config/*"],
      "#start/*": ["./start/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["build", "node_modules"]
}
